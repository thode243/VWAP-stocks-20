name: Nifty Option Chain â†’ Google Sheets

on:
  schedule:
    - cron: '*/2 3-10 * * 1-5'  # Every 2 min, 9:15-15:30 IST
  workflow_dispatch:

jobs:
  update:
    runs-on: ubuntu-latest
    concurrency:
      group: nifty-chain-update
      cancel-in-progress: true
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install Dependencies
        run: |
          pip install --upgrade pip
          pip install --no-cache-dir -r requirements.txt

      - name: Install Playwright Browsers
        run: |
          playwright install-deps
          playwright install chromium

      - name: Setup Credentials
        run: |
          echo '${{ secrets.GOOGLE_CREDENTIALS }}' > service_account.json
          [ -s service_account.json ] || exit 1

      - name: Run Updater
        env:
          SHEET_ID: ${{ secrets.SHEET_ID }}
          GOOGLE_CREDENTIALS_PATH: ${{ github.workspace }}/service_account.json
        run: python NSE_Option_Chainonline.py

      - name: Upload Logs
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: nifty-logs-dec2025
          path: option_chain.log
